<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DaysRow" parent="@style/AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/hack</item>
        <item name="android:textColor">@color/dayRowFg</item>
        <item name="android:background">@color/dayRowBg</item>
    </style>

    <style name="DaysHeader" parent="@style/DaysRow">
        <item name="android:background">@drawable/cell_with_border</item>
    </style>
    <style name="HeaderCell" parent="@style/AppTheme">
        <item name="android:background">@drawable/cell_with_border</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
